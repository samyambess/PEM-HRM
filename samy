<script>
/* ─── STATE ─────────────────────────────────────── */
var arena  = document.getElementById('arena');
var stage  = document.getElementById('stage');
var cvs    = document.getElementById('cvs');
var ctx    = cvs.getContext('2d');
var sc = 0.40, tx = -150, ty = -120;
var drag = false, lx = 0, ly = 0;
var activeNode = null;

function applyT() {
  stage.style.transform = 'translate('+Math.round(tx)+'px,'+Math.round(ty)+'px) scale('+sc+')';
  document.getElementById('z-pct').textContent = Math.round(sc*100)+'%';
}
applyT();

/* ─── PAN ───────────────────────────────────────── */
arena.addEventListener('mousedown', function(e) {
  if (e.target.classList.contains('n') || e.target.classList.contains('nw')) return;
  drag = true; lx = e.clientX; ly = e.clientY;
  arena.classList.add('dragging');
});
window.addEventListener('mouseup', function() { drag = false; arena.classList.remove('dragging'); });
window.addEventListener('mousemove', function(e) {
  if (!drag) return;
  tx += e.clientX - lx; ty += e.clientY - ly;
  lx = e.clientX; ly = e.clientY;
  applyT(); drawAll();
});

/* ─── ZOOM ──────────────────────────────────────── */
arena.addEventListener('wheel', function(e) {
  e.preventDefault();
  var f = e.deltaY < 0 ? 1.09 : 0.92;
  var r = arena.getBoundingClientRect();
  var mx = e.clientX - r.left, my = e.clientY - r.top;
  tx = mx - (mx - tx)*f; ty = my - (my - ty)*f;
  sc = Math.max(0.12, Math.min(2.5, sc*f));
  applyT(); drawAll();
}, {passive:false});

function doZoom(d) {
  var f = 1 + d;
  var cx = arena.clientWidth/2, cy = arena.clientHeight/2;
  tx = cx - (cx - tx)*f; ty = cy - (cy - ty)*f;
  sc = Math.max(0.12, Math.min(2.5, sc*f));
  applyT(); drawAll();
}

function resetView() {
  sc = 0.40; tx = -150; ty = -120;
  applyT(); drawAll();
}

/* ─── CANVAS ────────────────────────────────────── */
function resizeCvs() {
  cvs.width  = 4000;
  cvs.height = 2800;
  drawAll();
}
setTimeout(resizeCvs, 80);
window.addEventListener('resize', drawAll);

/* ─── NODE CENTRES (in stage px) ────────────────── */
