function drawCurve(ax,ay,bx,by,col,lw,dsh,al) {
  ctx.save();
  ctx.globalAlpha = al;
  ctx.strokeStyle = col;
  ctx.lineWidth = lw;
  ctx.lineCap = 'round';
  ctx.setLineDash(dsh ? [6,9] : []);
  var dx=bx-ax, dy=by-ay;
  var bend = 0.13;
  ctx.beginPath();
  ctx.moveTo(ax,ay);
  ctx.bezierCurveTo(
    ax+dx*0.38+dy*bend, ay+dy*0.38-dx*bend,
    ax+dx*0.62-dy*bend, ay+dy*0.62+dx*bend,
    bx, by
  );
  ctx.stroke();
  ctx.restore();
}

function drawAll() {
  ctx.clearRect(0,0,cvs.width,cvs.height);
  for (var i=0; i<CONN.length; i++) {
    var c=CONN[i];
    if (!N[c[0]]||!N[c[1]]) continue;
    var a=N[c[0]], b=N[c[1]];
    drawCurve(a[0],a[1],b[0],b[1],c[2],c[3],c[4],c[5]);
  }
}
drawAll();

/* ─── PANEL ─────────────────────────────────────── */
var panel = document.getElementById('panel');
var ptbar = document.getElementById('ptbar');

function openPanel(el) {
  var col = el.getAttribute('data-colhex') || '#e8b84b';
  document.getElementById('p-eye').textContent   = el.getAttribute('data-eye')   || '';
  document.getElementById('p-eye').style.color   = col;
  document.getElementById('p-title').textContent = el.getAttribute('data-title') || '';
  document.getElementById('p-src').textContent   = el.getAttribute('data-src')   || '';
  document.getElementById('p-body').textContent  = el.getAttribute('data-body')  || '';
  ptbar.style.background = col;
  panel.classList.add('open');
}

function closePanel() { panel.classList.remove('open'); }

function togglePanel(el, showIntro) {
  if (showIntro) {
    document.getElementById('p-eye').textContent   = 'Introduction au Modèle';
    document.getElementById('p-eye').style.color   = 'var(--gold)';
    document.getElementById('p-title').textContent = 'Cartographie des Déterminants du Turnover';
    document.getElementById('p-src').textContent   = 'Mémoire de Recherche — Management Hôtelier';
    document.getElementById('p-body').textContent  = 'Cette carte neurale représente l\'architecture complète des déterminants du turnover dans l\'industrie hôtelière. Six régions théoriques sont cartographiées : (I) Le modèle Push–Pull–Mooring identifie les forces qui poussent, attirent et ancrent les employés. (II) La théorie LMX éclaire la qualité différenciée des relations leader–membre. (III) Le Contrat Psychologique révèle les mécanismes de rupture de confiance. (IV) Les systèmes de récompenses agissent via une double médiation satisfaction/burnout. (V) L\'engagement affectif constitue le prédicteur direct central. (VI) Cinq lacunes théoriques majeures convergent vers la proposition du MIDDTH — Modèle Intégratif Dynamique des Déterminants du Turnover Hôtelier. Cliquez sur chaque nœud pour explorer les détails théoriques. Faites glisser pour naviguer, molette pour zoomer.';
    ptbar.style.background = 'var(--gold)';
    panel.classList.add('open');
  } else {
    panel.classList.toggle('open');
  }
}

/* ─── TOOLTIP & CLICKS ──────────────────────────── */
var tip = document.getElementById('tip');
var allN = document.querySelectorAll('.n, .nw');

for (var i=0; i<allN.length; i++) {
  (function(el) {
    el.addEventListener('mouseenter', function(e) {
      var col = el.getAttribute('data-colhex') || '#e8b84b';
      document.getElementById('tip-src').textContent  = el.getAttribute('data-eye') || '';
      document.getElementById('tip-src').style.color  = col;
      document.getElementById('tip-name').textContent = el.getAttribute('data-title') || '';
      tip.style.display = 'block';
    });
    el.addEventListener('mousemove', function(e) {
      var x=e.clientX+18, y=e.clientY-14;
      if (x+270>window.innerWidth)  x=e.clientX-285;
      if (y+130>window.innerHeight) y=e.clientY-145;
      tip.style.left=x+'px'; tip.style.top=y+'px';
    });
    el.addEventListener('mouseleave', function() { tip.style.display='none'; });
    el.addEventListener('click', function() {
      tip.style.display = 'none';
      if (activeNode) activeNode.classList.remove('active');
      activeNode = el; el.classList.add('active');
      openPanel(el);
    });
  })(allN[i]);
}

/* click on empty space = close panel */
arena.addEventListener('click', function(e) {
  if (!e.target.classList.contains('n') && !e.target.classList.contains('nw')) {
    closePanel();
    if (activeNode) { activeNode.classList.remove('active'); activeNode=null; }
  }
});
</script>
